datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum RaffleStatus {
  ACTIVE
  FINISHED
  CANCELLED
}

enum RaffleType {
  INTERNAL
  EXTERNAL
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  PURCHASE
  PRIZE
  REFUND
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  BANNED
  PENDING_VERIFICATION
  PENDING // Añadido para el flujo de registro KYC
}

enum TicketStatus {
  VALID
  PENDING
  REJECTED
}

model User {
  id              String        @id @default(cuid())
  name            String?
  email           String        @unique
  password        String?
  firstName       String
  lastName        String
  phone           String
  idNumber        String        @unique
  idCardUrl       String?
  idDocumentUrl   String?
  isVerified      Boolean       @default(false)
  verifiedById    String?
  verifiedAt      DateTime?
  verifiedBy      User?         @relation("VerifierRelation", fields: [verifiedById], references: [id])
  verifiedUsers   User[]        @relation("VerifierRelation")
  role            Role          @default(USER)
  status          UserStatus    @default(ACTIVE)
  walletBalance   Decimal       @default(0.0) @db.Decimal(20, 2)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  tickets         Ticket[]
  transactions    Transaction[]
  auditLogs       AuditLog[]

  @@index([email])
  @@index([idNumber])
}

model Raffle {
  id               String       @id @default(cuid())
  title            String
  description      String       @db.Text
  imageUrl         String?
  pricePerTicket   Decimal      @db.Decimal(10, 2)
  maxTickets       Int          @default(1000)
  minSoldThreshold Float        @default(0.9)
  winnersCount     Int          @default(1)
  status           RaffleStatus @default(ACTIVE)
  type             RaffleType   @default(INTERNAL)
  drawDate         DateTime
  winningNumber    Int?
  winningNumbers   Int[]
  isFinished       Boolean      @default(false)
  availableBanks   String?      @db.Text
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  tickets          Ticket[]

  @@index([status])
}

model Ticket {
  id            String       @id @default(cuid())
  number        Int
  price         Decimal      @default(0.0) @db.Decimal(10, 2)
  isWinner      Boolean      @default(false)
  status        TicketStatus @default(VALID)
  userId        String
  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  raffleId      String
  raffle        Raffle       @relation(fields: [raffleId], references: [id], onDelete: Cascade)
  transactionId String?
  transaction   Transaction? @relation(fields: [transactionId], references: [id])
  createdAt     DateTime     @default(now())

  @@unique([raffleId, number])
  @@index([userId])
  @@index([raffleId])
}

model Transaction {
  id            String          @id @default(cuid())
  userId        String
  user          User            @relation(fields: [userId], references: [id])
  amount        Decimal         @db.Decimal(20, 2)
  type          TransactionType
  status        String          @default("COMPLETED")
  referenceId   String?         @unique
  paymentMethod String?
  receiptUrl    String?
  buyerName     String?
  buyerDocument String?
  buyerEmail    String?
  createdAt     DateTime        @default(now())
  tickets       Ticket[]

  @@index([userId])
  @@index([type])
}

model SiteConfig {
  id              String   @id @default("default_config")
  siteName        String   @default("Sorteos Premium")
  heroText        String   @default("SORTEOS PREMIUM")
  colorPrincipal  String   @default("#2563eb")
  colorSecundario String   @default("#0f172a")
  cardBgColor     String   @default("#1e293b")
  cardTextColor   String   @default("#ffffff")
  headerIconType  String   @default("ICON")
  headerIconName  String   @default("ShieldCheck")
  headerImageUrl  String?
  bankAccounts    String?  @db.Text
  updatedAt       DateTime @updatedAt
}

model AuditLog {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  action      String
  entityType  String?  // <-- Añadido para rastreo avanzado (Ej: "TRANSACTION", "USER")
  entityId    String?  // <-- Añadido para vincular la acción a un ID específico
  metadata    Json?
  ipAddress   String?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}